{
  "name": "MetaHeuristicsProject",
  "version": "0.1.0",
  "author": {
    "name": "Khezour Mohamed Oussama" ,
    "email": "khzouroussama@gmail.com"
  },
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "autoprefixer": "^9.8.0",
    "chart.js": "^2.9.3",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.1",
    "postcss-cli": "^7.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "tailwindcss": "^1.4.6"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "build:tailwind": "postcss src/tailwind.css -o src/tailwind.generated.css",
    "watch:tailwind": "postcss -w src/tailwind.css -o src/tailwind.generated.css",
    "start": "nf start -p 3000",
    "start:react": "react-scripts start",
    "prebuild": "npm run build:tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/electron-wait-react",
    "package": "electron-builder build -wl "
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "MetaHeuristicsProject",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories":{
      "buildResources": "assets"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": ["portable"]
    },
    "portable": {
      "artifactName": "metaProject.exe"
    } ,
    "extraResources": ["./extraResources/**"]
  },
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^22.7.0",
    "electron-builder-squirrel-windows": "^22.7.0",
    "foreman": "^3.0.1",
    "nsis": "0.0.0",
    "react-router-dom": "^5.2.0"
  }
}
